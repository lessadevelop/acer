

////////////////////////////

	    MYSQL - basico

////////////////////////////



------------------------------------------
aessar mysql pelo prompt do windows
------------------------------------------

	C:\ mysql -u usuario -p
	
------------------------------------------
aessar mysql pelo shell do linux
------------------------------------------

	# sudo mysql -u usuario -p
	
	
------------------------------------------
mostrar bancos
------------------------------------------

	mysql> show databases;

------------------------------------------
escolher um banco
------------------------------------------

	mysql> use nome-tabela;

------------------------------------------
mostrar tabelas
------------------------------------------

	mysql> show tables;

------------------------------------------
mostrar colunas de uma tabela
------------------------------------------

	mysql> show columns from nome-tabela;


------------------------------------------
mostrar dados 
------------------------------------------

	mysql> select * from nome-tabela;
	
	
------------------------------------------
criar um banco
------------------------------------------

	mysql> create database exemplo1;
	

------------------------------------------
apagar um banco
------------------------------------------

	mysql> drop database exemplo1;
	

------------------------------------------
criar uma tabela
------------------------------------------

	mysql> CREATE TABLE Clientes (
    			cli_id int not null auto_increment,
    			cli_nome varchar(255),
    			cli_sobrenome varchar(255),
    			cli_endereco varchar(255),
    			cli_cep varchar(255),
    			cli_bairro varchar(255),
    			cli_cidade varchar(255),
    			cli_estado varchar(255),
    			cli_contato_fixo varchar(255),
    			cli_contato_celular varchar(255),
    			primarykey(cli_id)
			);


------------------------------------------
apagar uma tabela
------------------------------------------

	mysql> drop table Clientes; 
